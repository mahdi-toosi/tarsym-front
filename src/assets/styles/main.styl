//*  panel
.panel
    z-index: 1001;
    // outline: 1px dashed red
    width: 50%;
    min-width: 530px;
    overflow auto
    max-width: 530px;
    box-sizing: border-box
    padding: 15px;
    height: 100vh; 
    background: #f4f3fb;
    direction: ltr
    header
        display flex
        margin-bottom: 5px;
        position relative
        .fas
            margin-right: 1rem;
        .v-select 
            width: 40%;
            .vs__clear
                display none
            .vs__dropdown-toggle
                border: 0px
                flex-direction: row-reverse
            .vs__dropdown-menu
                min-width: 130px // equal to v-select width
                border 0px
                top: calc(115% - 1px);
                border-radius: 0px 0px 15px 15px;
                
            .vs__dropdown-option
                padding: 3px 33px 3px 20px;
            .vs__actions
                padding: 8px 6px 0 6px
            .vs__search 
                padding: 10px 3px 10px 20px;
    .allpoints
        // height 90%
        // direction: rtl;
        h1
            font-size: 50px
            margin 0.27em 0
        .lds-ripple 
            margin: 15px
            display: inline-block;
            position: relative;
            width: 80px;
            height: 80px;
            div 
                position: absolute;
                border: 4px solid #257eca;
                opacity: 1;
                border-radius: 50%;
                animation: lds-ripple 1.2s cubic-bezier(0, 0.2, 0.8, 1) infinite;
                &:nth-child(2)
                    animation-delay: -0.5s;
                @keyframes lds-ripple {
                    0% {
                        top: 36px;
                        left: 36px;
                        width: 0;
                        height: 0;
                        opacity: 1;
                    }
                    100% {
                        top: 0px;
                        left: 0px;
                        width: 72px;
                        height: 72px;
                        opacity: 0;
                    }
                }
        
    .points
        margin-top: 4px
        overflow: visible;
        direction: ltr
        // margin-right: -1rem;
        .notingToShow
            display: block;
            direction: rtl
            margin-top: 30vh;
            width: 100%;
            text-align: center;
            height: 50px;
    .point
        direction: rtl
        transition: all 0.5s ease
        cursor pointer
        position relative
        padding: 10px 15px 0px;
        border-radius: 5px;
        background: white
        margin: 1rem auto ;
        display block
        overflow: hidden;
        header
            i
                margin-right: 0px
            .logo
                font-size: 35px
            .editDoc
                margin-right: auto
                background: transparent
                border none
                cursor pointer
                transition: .3s
                &:hover
                    color: #0ce509
            .deleteDoc
                margin-right: auto
                background: transparent
                border none
                cursor pointer
                margin-right: 5px
                transition: .3s
                &:hover
                    color: red
            time
                display flex
                font-size: 90%
                // letter-spacing: 2px;
                // .negetiveYear
                //     position relative
                //     margin-left: 8px;
                //     &::before
                //         content: '-'
                //         position absolute
                //         left: -7px;
                // .FullDate
                //     display flex
                //     margin: 0
                //     padding: 0
                //     direction: ltr
                //     li
                //         list-style none
                //         margin-right: 6px 
                //         &:not(:last-child)::after
                //             content: '/'
                //             position absolute

            .nameandsituation
                display inline-block
                margin-right: 10px
                position relative
                h1
                    color: #1c1c1c
                    font-size: 100%
                    line-height: 1.5;
                    font-weight: 500;
                    margin-top: 0;
        main
            line-height: 1.7;
            font-size: 92%;
        &:hover
            // background: linear-gradient(to right, #48c6efc2 0%, #6f86d6c4 100%);
            // color: white
            transform: translateX(-6px)

        footer 
            direction: ltr;
            margin-top: 10px
            ul
                padding: 0;
                margin-top: 0px 
                margin-bottom: 5px;
            li 
                display inline-block
                padding: 2px 10px 5px 10px; 
                border-radius: 99px
                background: #feccd9
                color: #ff3366
                position relative
                font-size: 85%;
                i
                    margin-right: 6px
                    font-size: 122%;
                    position: relative;
                    top: 2px;
                span
                    background: #f36;
                    position: absolute;
                    padding: 5px 7px 3px 7px;
                    border-radius: 999px;
                    color: #fff;
                    font-size: 85%;
                    top: -10px;
                    left: -10px;
            li.video
                background: #bff0c1
                color: #00c305
                span
                    background: #00c305;


// *  scroll to top 
.back-to-top-animate-enter-active, .back-to-top-animate-leave-active {
    transform: translateY(0px) scale(1);
}

.back-to-top-animate-enter {
    opacity: 0;
    transform: translateY(60px) scale(1.4);
}

.back-to-top-animate-leave-to {
    opacity: 0;
    transform: translateY(30px) scale(1);
}

.vue-back-to-top {
    position: fixed;
    bottom: 50px;
    z-index: 1000;
    width: 40px;
    height: 40px;
    line-height: 40px;
    background-image: linear-gradient(to right, #52e8b4f7 0%, #08d4bbf7 100%);
    text-align: center;
    border-radius: 100% !important;
    padding: 0px !important;
}


// *  scroll to bottom 
.scrollToContent
    display: none
    position: absolute
    left: 50%; 
    transform: translate(-50%, -85%)
    border-radius: 100%
    width: 140px;
    height: 30px;
    cursor: pointer;
    i
        color: #8d96ac
        font-size: 10px
    svg 
        // fill: red
        fill: #f4f3fb
    .arrow 
        position: absolute; 
        margin-left:0px; 
        width: 12px; 
        height: 12px; 
        top:5px;
        left: 46.5%;
        
    
    .segunda 
        margin-top: 5px;

@keyframes bounceAlpha {
    0% {
        opacity: 1; 
        transform: translateY(0px) scale(1);
    }
    25%{
        opacity: 0; 
        transform:translateY(-8px) scale(0.9);
    }
    26%{
        opacity: 0; 
        transform:translateY(8px) scale(0.9);
    }
    55% {
        opacity: 1; 
        transform: translateY(0px) scale(1);
    }
}

    .bounceAlpha {
        animation-name: bounceAlpha;
        animation-duration:1.4s;
        animation-iteration-count:infinite;
        animation-timing-function:linear;
    }

    .arrow.primera.bounceAlpha {
        animation-name: bounceAlpha;
        animation-duration:1.4s;
        animation-delay:0.2s;
        animation-iteration-count:infinite;
        animation-timing-function:linear;
    }

    .scrollToContent .arrow{
        animation-name: bounceAlpha;
        animation-duration:1.4s;
        animation-iteration-count:infinite;
        animation-timing-function:linear;
    }
    .scrollToContent .arrow.segunda{
        animation-name: bounceAlpha;
        animation-duration:1.4s;
        animation-delay:0.2s;
        animation-iteration-count:infinite;
        animation-timing-function:linear;
    }

@media only screen and (max-width: 950px) 
    #app 
        flex-flow: column-reverse
    .panel  
        height: unset
        max-width: unset
        min-width: unset
        width: 100%
        overflow: unset
        .notingToShow
            margin-top: 10vh !important;
    .scrollToContent
        display: flex
        justify-content: center
        align-items: center
        z-index: 9999;

