#app 
    display flex
    direction: rtl;

//*  panel
.panel
    z-index: 1001;
    // outline: 1px dashed red
    width: 50%;
    min-width: 530px;
    overflow auto
    max-width: 530px;
    box-sizing: border-box
    padding: 15px;
    height: 100vh; 
    background: #f4f3fb;
    direction: ltr
    header
        display flex
        margin-bottom: 5px;
        position relative
        .fas
            margin-right: 1rem;
        .v-select 
            width: 40%;
            .vs__clear
                display none
            .vs__dropdown-toggle
                border: 0px
                flex-direction: row-reverse
            .vs__dropdown-menu
                min-width: 130px // equal to v-select width
                border 0px
                top: calc(115% - 1px);
                border-radius: 0px 0px 15px 15px;
                
            .vs__dropdown-option
                padding: 3px 33px 3px 20px;
            .vs__actions
                padding: 8px 6px 0 6px
            .vs__search 
                padding: 10px 3px 10px 20px;
    .allpoints
        // height 90%
        // direction: rtl;
        h1
            font-size: 50px
            margin 0.27em 0
        .lds-ripple 
            margin: 15px
            display: inline-block;
            position: relative;
            width: 80px;
            height: 80px;
            div 
                position: absolute;
                border: 4px solid #257eca;
                opacity: 1;
                border-radius: 50%;
                animation: lds-ripple 1.2s cubic-bezier(0, 0.2, 0.8, 1) infinite;
                &:nth-child(2)
                    animation-delay: -0.5s;
                @keyframes lds-ripple {
                    0% {
                        top: 36px;
                        left: 36px;
                        width: 0;
                        height: 0;
                        opacity: 1;
                    }
                    100% {
                        top: 0px;
                        left: 0px;
                        width: 72px;
                        height: 72px;
                        opacity: 0;
                    }
                }
        
    .points
        margin-top: 4px
        overflow: auto;
        direction: ltr
        padding-right: 1rem;
        // margin-right: -1rem;
        .notingToShow
            display: block;
            margin-top: 30vh;
            width: 100%;
            text-align: center;
            height: 50px;
    .point
        direction: rtl
        transition: all 0.5s ease
        cursor pointer
        position relative
        padding: 15px;
        border-radius: 5px;
        background: white
        margin: 1rem ;
        margin-right: 3px;
        display block
        header
            i
                margin-right: 0px
            .logo
                font-size: 35px
            .editDoc
                margin-right: auto
                background: transparent
                border none
                cursor pointer
                transition: .3s
                &:hover
                    color: #0ce509
            .deleteDoc
                margin-right: auto
                background: transparent
                border none
                cursor pointer
                margin-right: 5px
                transition: .3s
                &:hover
                    color: red
            time
                display flex
                font-size: 90%
                // letter-spacing: 2px;
                // .negetiveYear
                //     position relative
                //     margin-left: 8px;
                //     &::before
                //         content: '-'
                //         position absolute
                //         left: -7px;
                // .FullDate
                //     display flex
                //     margin: 0
                //     padding: 0
                //     direction: ltr
                //     li
                //         list-style none
                //         margin-right: 6px 
                //         &:not(:last-child)::after
                //             content: '/'
                //             position absolute

            .nameandsituation
                display inline-block
                margin-right: 10px
                position relative
                h1
                    color: #1c1c1c
                    font-size: 90%
                    line-height: 1.5;
                    font-weight: 500;
        main
            line-height: 1.7;
            font-size: 92%;
        &:hover
            // background: linear-gradient(to right, #48c6efc2 0%, #6f86d6c4 100%);
            // color: white
            transform: translateX(-6px)

        footer 
            direction: ltr;
            margin-top: 10px
            ul
                padding: 0;
                margin-top: 0px 
                margin-bottom: 5px;
            li 
                display inline-block
                padding: 2px 10px 5px 10px; 
                border-radius: 99px
                background: #feccd9
                color: #ff3366
                position relative
                font-size: 85%;
                i
                    margin-right: 6px
                    font-size: 122%;
                    position: relative;
                    top: 2px;
                span
                    background: #f36;
                    position: absolute;
                    padding: 5px 7px 3px 7px;
                    border-radius: 999px;
                    color: #fff;
                    font-size: 85%;
                    top: -10px;
                    left: -10px;
            li.video
                background: #bff0c1
                color: #00c305
                span
                    background: #00c305;


@keyframes tada {
    40% {
    transform: scale3d(1, 1, 1);
    }

    42.77% {
    transform: scale3d(0.95, 0.95, 0.95) rotate3d(0, 0, 1, -3deg);
    }

    45.54%,
    51.08%,
    56.62%,
    62.16% {
    transform: scale3d(1.15, 1.15, 1.15) rotate3d(0, 0, 1, 3deg);
    }

    48.31%,
    53.85%,
    59.39% {
    transform: scale3d(1.15, 1.15, 1.15) rotate3d(0, 0, 1, -3deg);
    }

    65% {
    transform: scale3d(1, 1, 1);
    }
}

.tada {
    animation-name: tada;
    transform-origin: center bottom;
    animation-duration: 10s;
    animation-fill-mode: both;
    animation-iteration-count: infinite;
}

