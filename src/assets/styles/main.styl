* , *:focus
    outline: none;
    -webkit-tap-highlight-color: transparent;

*::-webkit-scrollbar {
    width: 7px
	background-color: #F5F5F5
}

*::-webkit-scrollbar-track {
	-webkit-box-shadow: inset 0 0 6px rgba(0,0,0,0.3)
	border-radius: 10px
