.newpoint
    height 90%
    overflow hidden
    overflow-y: auto
    direction: ltr
    header 
        direction: rtl
        margin: 1rem;
    section
        direction: rtl
        padding: 10px 5%;
        background: #fff;
        border-radius: 5px;
        margin: 0 10px;
        .title
            border: none;
            line-height: 30px;    
            width: 100%;
            border-bottom: 1px solid #bebebe;
            margin-bottom: 10px 
    .tag_date_section
        border-radius: 0 0 5px 5px
        margin-top: -5px
        box-shadow: 0px 10px 9px -9px rgba(0,0,81,0.1);
        display: flex
        align-items: center;
        .v-select
            border-right: 2px solid #d9d9d9;
    section.tools
        background: white;
        margin: 20px 10px;
        border-radius: 6px;
        overflow: hidden;
        overflow-y: auto;
        .tool
            margin: 5px;
            padding: 10px;
            list-style-type: none;
            border-right: #898888 solid 2px;
            &.tool_is_on
                border-right: #0ce509 solid 2px;
        .tool_header
            display: flex
            pre
                margin-right: auto;
            .icons_box_wrapper
                margin: 5px
            .tooltip
                border: none 
                border-bottom: 1px gray solid
                height: 30px;
                background: transparent
            .delete_button
                transition: .2s
                margin-right: auto; 
                cursor pointer
                background: transparent
                border none
                &:hover
                    color red
        .tool_body
            margin: 10px 5px 5px 5px
            div
                display inline-block
        .tools-content
            .tools
                label 
                    font-size: 15px
                    padding: 2px 5px 2px 10px
                    position: relative;
                    top: -7px;

    .ql-snow
        border none !important
        font-family: iranSans
        padding: 0px
    .ql-container
        .ql-editor
            max-height: 250px
            padding: 5px 8px;
    
    .tags
        direction: rtl
        width: 70%;
        display: inline-block;
        .vs__actions
            display none
        .vs__selected
            border-radius: 25px;
            padding: 0 10px;
        .vs__deselect
            margin-left: 0px;
            margin-right: 4px;
            svg path 
                transition: .2s
            &:hover svg path 
                fill red

        .vs__dropdown-toggle
            border none
    .datepicker
        display: inline-block;
        width: 30%;
        
    .tabs
        .activeTab
            border-bottom: #c6c6c6 solid 2px;
            color: black
        span 
            padding: 4px 15px
            cursor pointer
            margin: 10px 15px
    
    
    .addNewLayer //button
        border-radius: 999px
        margin: 20px auto 10px;
        display block
        font-size: 40px;
        width: 40px;
        height: 40px;
        padding: 0px;