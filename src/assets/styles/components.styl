// *  Map
.map 
    font-family: 'iranSans'
    height: 100vh !important;
    color #8d96ac
    // width: 67% !important;
    position: relative;
    overflow: hidden;
    margin-right: auto;
    outline: none;
    // border: red dashed 1px;
    direction: ltr;
    .layerPicker
        position relative
        background: white
        padding: 5px 10px
        box-shadow 0px 1px 4px rgba(255, 255, 255 , 84%);
        border-radius: 4px
        .bugFix
            width: 100%
            position absolute
            height: 100%
            transition: .5s
        .radiobox
            display: none
        i
            font-size: 20px
        &:hover 
            .radiobox
                display: flex
            .bugFix
                height: 0%

            i
                display none
        label , input
            cursor pointer
        label 
            width: 100%;
            margin-right: 5px
    .leaflet-bar 
        box-shadow: 0px 1px 4px #ffffffd6 
        border unset !important
        a 
            cursor pointer
    .leaflet-marker-pane
        position relative
    .leafletDefaultIcon
        width: 21px
        height 31px
        position absolute
    .leaflet-marker-draggable
        display: grid;
        &:hover
            cursor move
        span
            margin: auto
            position relative
            &:before
                position: absolute;
                background: #d3d3d3;
                margin-left: -20px;
                margin-top: -20px;
                width: 40px;
                height: 40px;
                content: "";
                display: block;
                border-radius: 50% !important;
                -webkit-backface-visibility: hidden;
                animation: wave-animate 3s infinite ease-out;
            &:after 
                position: absolute;
                background: white;
                margin-left: -20px;
                margin-top: -20px;
                width: 40px;
                height: 40px;
                content: "";
                display: block;
                border-radius: 50% !important;
                -webkit-backface-visibility: hidden;
                opacity: 0;
                animation: wave-animate 3s 1.5s infinite ease-out;
@keyframes wave-animate {
    0% {
    transform: scale(0);
    opacity: 1;
    transform-origin: center;
    }
    100% {
    transform: scale(3);
    opacity: 0;
    transform-origin: center;
    }
}
