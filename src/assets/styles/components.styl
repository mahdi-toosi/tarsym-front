@import 'libs/helpers'
// @import 'libs/datePicker'
@import 'libs/sidebarNavigation'

$boxShadow = 0px 1px 4px #ffffffd6

// nprogress
#nprogress
    .spinner
        display none
    .bar
        background #22dda9

// Toasted
.toasted
    direction: rtl
    justify-content: unset !important
    line-height: 1.6em !important;
    i 
        font-size: 27px
        margin-left: 0.5rem !important;
        margin-right: -0.4rem !important;
    .action 
        margin: 5px auto 5px 7px !important
        color: white !important
        border: 1px white solid
        border-radius: 5px !important
        padding: 5px 9px !important;
        letter-spacing: 0 !important;


.v-select 
    .vs__dropdown-menu
        border-radius: 4px;
        margin-top: 7px;
        border-top-style: solid;
// navigator i think
