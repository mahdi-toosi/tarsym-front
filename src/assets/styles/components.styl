// nprogress
#nprogress
    .spinner
        display none
    .bar
        background #22dda9

// Toasted
.toasted
    direction: rtl
    justify-content: unset !important
    i
        font-size: 27px
        margin-left: 0.5rem !important;
        margin-right: -0.4rem !important;

//  Text box tool
.bubble 
    overflow hidden
    border-radius: 10px
    text-align: right
    padding: 8px
    position relative
    z-index 2
    font-family: iranSans
    box-shadow: #747474 0 0 17px -6px;
