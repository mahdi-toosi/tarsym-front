.vs--single.vs--open .vs__selected 
    position: relative !important;

//  map
.leaflet-control.mapmaker
    a
        cursor pointer
        font-size: 140%
        background-color: #fff;
        border-bottom: 1px solid #ccc;
        width: 26px;
        height: 26px;
        line-height: 30px;
        display: block;
        text-align: center;
        text-decoration: none;
        color: #676767;
        border-radius: 4px
        box-shadow: 0 2px 4px -1px rgba(0,0,0,0.65)
        color black
        &:hover
            background-color: #e8e8e8;
    a.deactiveAddMarker
        background-color: #e8e8e8;
        cursor default

.leaflet-tooltip
    font-family: iranSans;




