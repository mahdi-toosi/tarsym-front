//  map
.map 
    font-family: 'iranSans'
    height: 100vh !important;
    // width: 67% !important;
    position: relative;
    overflow: hidden;
    margin-right: auto;
    outline: none;
    // border: red dashed 1px;
    direction: ltr;
    .leaflet-marker-pane
        position relative
    .leafletDefaultIcon
        width: 21px
        height 31px
        position absolute
    .leaflet-marker-draggable
        display: grid;
        &:hover
            cursor move
        span
            margin: auto
            position relative
            &:before
                position: absolute;
                background: #d3d3d3;
                margin-left: -20px;
                margin-top: -20px;
                width: 40px;
                height: 40px;
                content: "";
                display: block;
                border-radius: 50%;
                -webkit-backface-visibility: hidden;
                animation: wave-animate 3s infinite ease-out;
            &:after 
                position: absolute;
                background: white;
                margin-left: -20px;
                margin-top: -20px;
                width: 40px;
                height: 40px;
                content: "";
                display: block;
                border-radius: 50%;
                -webkit-backface-visibility: hidden;
                opacity: 0;
                animation: wave-animate 3s 1.5s infinite ease-out;
@keyframes wave-animate {
    0% {
    transform: scale(0);
    opacity: 1;
    transform-origin: center;
    }
    100% {
    transform: scale(3);
    opacity: 0;
    transform-origin: center;
    }
}
@keyframes color-loop {
    0% {
    background: #2CAB5B;
    }
    25% {
    background: #FABC03;
    }
    50% {
    background: #ED4B40;
    }
    75% {
    background: #4286F3;
    }
    100% {
    background: #2CAB5B;
    }
}
