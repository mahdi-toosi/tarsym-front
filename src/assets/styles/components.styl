//  map
.leaflet-control.mapmaker
    a
        cursor pointer
        font-size: 140%
        background-color: #fff;
        border-bottom: 1px solid #ccc;
        width: 30px;
        height: 30px;
        line-height: 30px;
        display: block;
        text-align: center;
        text-decoration: none;
        color: #676767;
        border-radius: 99px
        &:hover
            background-color: #e8e8e8;
    a.deactiveAddMarker
        background-color: #e8e8e8;
        cursor default

.leaflet-tooltip
    font-family: iranSans;




