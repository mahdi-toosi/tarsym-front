.sidebarNavigation 
    position: fixed
    top: 15px;
    left: 15px;
    user-select: none
    z-index: 99999
    direction: ltr;
    
    img 
        border-radius: 50%
        width: 50px
        height: 50px
        position: relative
        z-index: 999
        cursor: pointer
        box-shadow: 0px 1px 4px #d2d2d2d6 
    

    .sidebar 
        background: white
        margin-top: -55px
        border-radius: 25px 12px 12px 12px
        font-size: 15px
        text-align: center
        padding: 0px
        transition: all 0.5s ease-in-out
        clip-path: circle(100% at -65% -60%)
        max-width: 400px
        max-height: 0

        &.show 
            max-height: 100%
            padding: 5px 5px 0px
            clip-path: circle(100%)
            box-shadow: 0px 1px 4px #d2d2d2d6
        

        .router-link-exact-active i 
            color: #00bf9c
        

        .header 
            display: flex
            align-items: center
            div 
                width: 50px
            

            header 
                min-height: 47px
                min-width: 80px
                padding: 3px 10px 0px
                line-height: 22px
                text-align: right
            
        

        ul 
            padding: 6px 10px
            margin: 0
        

        li 
            cursor: pointer
            list-style: none
            padding: 10px 0
            text-align: right
        

        i 
            margin-left: 3px
        

        li:not(:last-child) 
            border-bottom: 1px solid darkgray
        
    
