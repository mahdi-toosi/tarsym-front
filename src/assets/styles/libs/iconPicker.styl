.icons_box_wrapper
    position relative
    i
        font-size: 19px;
.icons_box
    position: fixed;
    top: 20px;
    right: 39%;
    background: #dfdfdf;
    border-radius: 10px;
    height 0px
    width: 230px;
    padding: 5px 
    overflow hidden
    transition: all 0.5s ease-in-out;
    clip-path: circle(0% at 100% 3%)
    input 
        background: transparent;
        border: none;
        padding: 5px 20px 5px 5px;
        border-bottom: 1px solid gray;
        margin-right: -20px;
        text-align: left;
        direction: ltr
    ul
        max-height: 200px;
        overflow-y: auto;
        padding: 5px
        direction: ltr;
        margin: 5px 0;
        li
            display: inline-block;
            cursor pointer
            text-align: center
        i
            margin: 5px
            width: 25px
            height 25px
            font-size: 25px
.show 
	height 250px
	clip-path circle(90%)

.flip-list-move 
    transition: transform 1s;
