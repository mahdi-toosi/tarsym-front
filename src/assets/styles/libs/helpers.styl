.rounded
    border-radius: 999px
.btn 
    padding: 12px 30px
    border-radius: 5px
    color: white !important
    border 0px
    cursor pointer
    box-shadow: 0px 0px 16px 0px rgba(5, 108, 158, 0.52);
    filter: brightness(1);
    transition: 0.3s;
    &[disabled='disabled']
        opacity: .7;
    &:hover
        filter: brightness(1.2);
.btn-blue
    background-image: linear-gradient(to right, #48c6ef 0%, #6f86d6 100%);
.btn-red
    background-image: linear-gradient(to right, #ee6c80 0%, #d5293b 100%);
.btn-green
    background-image: linear-gradient(to right, #6ceec3 0%, #29d52e 100%);
.btn-back
    border-radius: 100px;
    background: transparent;
    position: absolute;
    left: 6%;
    font-size: 150%;
    cursor: pointer;
    height: 48px;
    padding: 10px;
    box-shadow: none;
    color: #798193 !important;
    .fas
        margin-right: 0rem !important;

.shadow
    box-shadow: 0px 0px 16px 0px rgba(0, 0, 81, 0.10);
.ml1
    margin-left: 1rem;



@media only screen and (max-width: 950px) 
    .btn-back
        display: none