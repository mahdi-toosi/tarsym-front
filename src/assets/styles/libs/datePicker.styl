$width = 350px
$scroll-width = 8px

.date_time_picker_wrapper
	position relative
	button 
		width: 84%;
		padding: 5px 8px 3px 5px;
		background: white;
		border: none;
		margin-right: 10px
		text-align: center
		border-right: 2px solid #d9d9d9;
		cursor pointer
	.clearDate
		cursor pointer
		&:hover
			color red
.date_time_picker 
	width $width
	z-index -1
	height 0px
	clip-path circle(0% at 100% 3%)
	transition all 0.5s ease-in-out, z-index 0.05s ease
	position fixed
	top 10%
	right 40%
	header 
		border-radius 7px
		margin 0px !important
		background-color #7777cc
	.page_wrapper 
		height 240px
		position relative
		margin-top: -4rem;
		ul 
			overflow-y auto
			padding 10px 0px
			background white
			border-radius 15px
			margin 10px 0px
			position absolute
			top 20px
			opacity 0
			z-index -1
			transition opacity .5s, top .5s, z-index .005s
			box-shadow: #5f5f5f7d 0px 4px 16px


			&::-webkit-scrollbar 
				width $scroll-width

			&::-webkit-scrollbar-thumb 
				background #123456
				outline 1px solid #654321
				border-radius 5px
	li 
		text-align center !important
		list-style none !important
		display inline-block !important
		cursor pointer !important
		user-select none !important

.date_time_picker.show 
	height 260px
	z-index 20
	display block
	clip-path circle(100%)

.show_this_page
	opacity 1 !important
	z-index 1 !important
	top 0 !important

.pages 
	padding 10px
	height: 70px;

.pages li 
	width ($width / 3.4)
	font-weight bold
	color white

.type 
	cursor pointer

.years li, .centurys li 
	width (($width - $scroll-width) / 5)
	height: 25px;
	line-height: 25px;
	border-radius: 3px;

.months li 
	width (($width - $scroll-width) / 3)
	height 40px
	line-height 40px
	border-radius: 3px;

.days li 
	width (($width - $scroll-width) / 7)
	height 32px
	line-height 32px
	transition 0.2s
	border-radius 999px
	border-radius: 3px;	
	&:hover 
		font-weight bold

.selected 
	background-color red
	font-weight bold
	color white


