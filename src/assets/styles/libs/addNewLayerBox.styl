.addNewLayerBox {
    display: flex;
}

.v-select[dir=rtl] {
    .vs__actions {
        padding: 4px 6px 0 3px !important;
    }
}

.seachBoxForLayer {
    width: 80%;
    margin: auto;

    .vs__dropdown-toggle {
        border: 1px solid rgba(60, 60, 60, 0.26) !important;
        border-radius: 4px !important;
    }

    .vs__dropdown-menu {
        top: unset !important;
        bottom: 35px;
        border-radius: 4px 4px 0 0;
        border-top-style: solid;
        border-bottom-style: none;
        box-shadow: 0 -3px 6px rgba(0, 0, 0, 0.15);

        li {
            overflow: hidden;
        }

        .seachBoxForLayerOption {
            width: 100%;
            border-right: 2px solid #d9d9d9;
            padding-right: 5px;
            margin: 0px !important;

            h4 {
                margin: 0px;
                font-size: 14px;
            }

            p {
                margin: 0px;
                font-size: 13px;
            }
        }
    }
}

.addNewLayer {
    border-radius: 999px;
    margin: 20px auto 20px;
    display: block;
    font-size: 30px;
    line-height: 26px;
    width: 37px;
    height: 37px;
    padding: 0px;
}